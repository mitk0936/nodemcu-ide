{
  "name": "nodemcu-ide",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "electron-layers/*",
    "electron-layers/bridge/*",
    "packages/*"
  ],
  "main": "electron-layers/main/dist/main.js",
  "packageManager": "npm@10.9.3",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --continue && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nodemcu.ide",
    "productName": "NodemcuIDE",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "icon": ".assets/icon.ico",
    "files": [
      "electron-layers/bridge/preload/dist/**/*",
      "electron-layers/main/dist/**/*",
      "electron-layers/renderer/dist/**/*",
      "packages/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "icon": ".assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "./assets/",
        "to": "icons"
      },
      {
        "from": "./packages/nodemcu-tool-binary/dist/",
        "to": "extra-tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./node_modules/@serialport/bindings/build/Release/",
        "to": "extra-tools/node_modules/@serialport/bindings/build/Release",
        "filter": [
          "bindings.node"
        ]
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.x",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "turbo": "^2.5.8",
    "typescript": "~5.8.3",
    "wait-on": "^8.0.3"
  }
}
