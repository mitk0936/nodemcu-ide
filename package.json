{
  "name": "NodemcuIDE",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"vite\" \"npm:dev:main\"",
    "dev:main": "concurrently \"npm run build:main:watch\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electronmon --inspect=9229 dist-electron/main.js --watch dist-electron build\"",
    "build": "npm run build:main && vite build && electron-builder",
    "postbuild": "copy build\\icon.ico dist\\win-unpacked\\resources\\icon.ico",
    "build:nodemcu-tool": "npm run build -w packages/nodemcu-tool-binary",
    "build:main": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "build:main:watch": "tsc -p tsconfig.electron.json --watch | tsc -p tsconfig.preload.json --watch",
    "lint": "eslint .",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nodemcu.ide",
    "productName": "NodemcuIDE",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "icon": "build/icon",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "icon": "build/icon",
      "signAndEditExecutable": true
    },
    "extraResources": [
      {
        "from": "./build/",
        "to": "icons"
      },
      {
        "from": "./packages/nodemcu-tool-binary/dist/",
        "to": "extra-tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./node_modules/@serialport/bindings/build/Release/",
        "to": "extra-tools/node_modules/@serialport/bindings/build/Release",
        "filter": [
          "bindings.node"
        ]
      }
    ]
  },
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@types/w3c-web-serial": "^1.0.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esptool-js": "^0.5.5",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-console-emulator": "^5.0.2",
    "react-dom": "^19.1.0",
    "react-folder-tree": "^5.1.1",
    "react-terminal": "^1.4.5",
    "tailwind-merge": "^3.3.0",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss-animate": "^1.0.7",
    "web-serial-polyfill": "^1.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/mime-types": "^3.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.x",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
